<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CitizenMainActivity">

    <android.support.design.widget.TabLayout
        android:id="@+id/citizenTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicatorColor="@color/colorBlack">

        <android.support.design.widget.TabItem
            android:id="@+id/id_citizen_tab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register Complaint" />

        <android.support.design.widget.TabItem
            android:id="@+id/id_citizen_tab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View\nComplaint" />

        <android.support.design.widget.TabItem
            android:id="@+id/id_citizen_tab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile" />
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_citizenViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/citizenTabLayout"
        app:layout_constraintVertical_bias="0.005" />


</android.support.constraint.ConstraintLayout>